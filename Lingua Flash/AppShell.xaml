<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Lingua_Flash.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Lingua_Flash"
    xmlns:session="clr-namespace:Lingua_Flash.Pages.Sessions"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent 
        Title="Start Session" 
        ContentTemplate="{DataTemplate session:Session}"
        Route="SessionPage" />

</Shell>
